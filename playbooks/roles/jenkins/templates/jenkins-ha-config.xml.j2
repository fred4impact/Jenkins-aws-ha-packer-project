<?xml version='1.1' encoding='UTF-8'?>
<!-- Jenkins HA Configuration -->
<jenkins>
  <numExecutors>{{ jenkins_num_executors | default(2) }}</numExecutors>
  <mode>NORMAL</mode>
  <useSecurity>true</useSecurity>
  
  <!-- HA Configuration -->
  <workspaceDir>${JENKINS_HOME}/workspace/${ITEM_FULL_NAME}</workspaceDir>
  <buildsDir>${ITEM_ROOTDIR}/builds</buildsDir>
  
  <!-- Session Configuration for HA -->
  <sessionTimeout>{{ jenkins_session_timeout | default(60) }}</sessionTimeout>
  
  <!-- Shared Workspace on EFS -->
  <hudson>
    <workspaceDir>${JENKINS_HOME}/workspace/${ITEM_FULL_NAME}</workspaceDir>
  </hudson>
</jenkins>



